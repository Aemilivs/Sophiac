@page "/runs/view/{CollectionFileName?}"

<div id="run">
    <div id="run-title">@_run.Title</div>
    @*TODO Replace answer with question in that hierarchy.*@
    <div id="run-answers">
        @foreach (var answer in _run.Answers)
        {
            <div class="asnwer" @key="answer">
                <div class="answer-question-title">@answer.Question.Title</div>
                <div class="answer-question-description">@answer.Question.Description</div>
                @if (answer.HasBeenSkipped)
                {
                    <div class="answer-selected-answer">The question has been skipped.</div>
                }
                else
                {
                    <div class="selected-answer">Answer: @answer.SelectedAnswer.Content</div>
                    <div class="answer-points">Points: @answer.SelectedAnswer.Points</div>
                }
                <div class="answer-span">Time spent on a question: @answer.AnswerSpan.TotalSeconds seconds</div>
            </div>
        }
    </div>
</div>
